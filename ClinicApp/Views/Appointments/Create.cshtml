@model AppointmentClass
@{
    var patients = ViewBag.Patients;
    var doctors = ViewBag.Doctors;
}

<h2>Book Appointment</h2>

<form asp-action="Create">
    <label>Patient:</label>
    <select asp-for="PatientId" class="form-control">
        @foreach (var p in patients)
        {
            <option value="@p.PatientId">@p.Name</option>
        }
    </select>

    <label>Doctor:</label>
    <select asp-for="DoctorId" class="form-control">
        @foreach (var d in doctors)
        {
            <option value="@d.DoctorId">@d.Name (@d.Specialty)</option>
        }
    </select>

    <label>Date:</label>
    <input asp-for="Date" type="datetime-local" class="form-control" />

    <button type="submit" class="btn btn-success">Book</button>
</form>
