@model IEnumerable<ClinicApp.Models.PatientClass>

<h2>Patients</h2>

<a class="btn btn-primary" asp-action="Create">Register Patient</a>

<table class="table table-bordered mt-3">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Phone</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.PatientId</td>
            <td>@p.Name</td>
            <td>@p.Phone</td>
        </tr>
    }
</table>
