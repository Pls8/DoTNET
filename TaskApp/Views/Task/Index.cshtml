@model List<TaskClass>

<h2 class="mb-4 text-white">Tasks</h2>

<div class="d-flex gap-2 mb-4">
    <a href="/Task/Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Task
    </a>
    <a href="/Category" class="btn btn-outline-secondary">
        <i class="bi bi-folder"></i> View Categories
    </a>
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Deadline</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td class="text-white">@task.Name</td>
                        <td class="text-white">@task.DeadLine.ToString("MM/dd/yyyy")</td>
                        <td>
                            <span class="badge bg-info">@task.Category?.Name</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning btn-sm">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <button type="button" class="btn btn-danger btn-sm"
                                        data-bs-toggle="modal" data-bs-target="#deleteModal-@task.Id">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>

                            <!-- Delete Confirmation Modal -->
                            <div class="modal fade" id="deleteModal-@task.Id" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title text-white">Confirm Delete</h5>
                                            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p>Are you sure you want to delete the task <strong>"@task.Name"</strong>?</p>
                                            <p class="text-warning">This action cannot be undone.</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <a asp-action="Delete" asp-route-id="@task.Id" class="btn btn-danger">
                                                Yes, Delete Task
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No tasks found. Create your first task!
    </div>
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}