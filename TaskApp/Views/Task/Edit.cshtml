@model TaskClass

<h2 class="mb-4">Edit Task</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" class="border p-4 rounded shadow-sm">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Task Title</label>
                <input asp-for="Name" class="form-control" placeholder="Enter task title" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="DeadLine" class="form-label fw-bold">Deadline</label>
                <input asp-for="DeadLine" type="datetime-local" class="form-control" required />
                <span asp-validation-for="DeadLine" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label fw-bold">Category</label>
                @if (ViewBag.Categories != null)
                {
                    <select asp-for="CategoryId" class="form-select" required>
                        @foreach (var cat in ViewBag.Categories)
                        {
                            <option value="@cat.Id">@cat.Name</option>
                        }
                    </select>
                }
                else
                {
                    <div class="alert alert-warning">No categories available</div>
                }
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-check-circle"></i> Save Changes
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>