@model List<TaskCategoryClass>

<h2 class="mb-4 text-white">Categories</h2>

<div class="d-flex gap-2 mb-4">
    <a href="/Category/Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Add New Category
    </a>
    <a href="/Task" class="btn btn-outline-secondary">
        <i class="bi bi-list-task"></i> View Tasks
    </a>
</div>

@if (Model != null && Model.Count > 0)
{
    <div class="list-group">
        @foreach (var category in Model)
        {
            <div class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-1 text-white">@category.Name</h5>
                    <small class="text-muted">ID: @category.Id</small>
                </div>
                <div class="btn-group" role="group">
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <button type="button" class="btn btn-danger btn-sm"
                            data-bs-toggle="modal" data-bs-target="#deleteModal-@category.Id">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>

                <!-- Delete Confirmation Modal -->
                <div class="modal fade" id="deleteModal-@category.Id" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title text-white">Confirm Delete</h5>
                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to delete the category <strong>"@category.Name"</strong>?</p>
                                <p class="text-warning">This action cannot be undone.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">
                                    Yes, Delete Category
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> No categories found. Create your first category!
    </div>
}

@section Scripts {
    <!-- Bootstrap JS for modals -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
}