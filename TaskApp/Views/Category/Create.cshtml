@model TaskCategoryClass

<h2 class="mb-4">Create New Category</h2>

<div class="row">
    <div class="col-md-6">
        <form method="post" asp-controller="Category" asp-action="Create" class="border p-4 rounded shadow-sm">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                <input asp-for="Name" class="form-control" placeholder="Enter category name" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-plus-circle"></i> Create Category
                </button>
                <a href="/Category" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>