<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TaskApp.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #000713 !important;
            color: #e0e0e0 !important;
        }

        .card, .table, .list-group-item, .alert {
            background-color: #0a1a2d !important;
            color: #e0e0e0 !important;
            border-color: #1a3a5f !important;
        }

        .table-dark {
            background-color: #1a3a5f !important;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #0f2842 !important;
        }

        .table-hover tbody tr:hover {
            background-color: #1a3a5f !important;
            color: #ffffff !important;
        }

        .form-control, .form-select {
            background-color: #0a1a2d !important;
            color: #e0e0e0 !important;
            border-color: #2c5282 !important;
        }

            .form-control:focus, .form-select:focus {
                background-color: #0a1a2d !important;
                color: #ffffff !important;
                border-color: #4299e1 !important;
                box-shadow: 0 0 0 0.25rem rgba(66, 153, 225, 0.25) !important;
            }

        .btn-primary {
            background-color: #2b6cb0 !important;
            border-color: #2b6cb0 !important;
        }

            .btn-primary:hover {
                background-color: #2c5282 !important;
                border-color: #2c5282 !important;
            }

        .btn-danger {
            background-color: #c53030 !important;
            border-color: #c53030 !important;
        }

        .btn-warning {
            background-color: #d69e2e !important;
            border-color: #d69e2e !important;
            color: #000000 !important;
        }

        .btn-outline-secondary {
            color: #a0aec0 !important;
            border-color: #4a5568 !important;
        }

            .btn-outline-secondary:hover {
                background-color: #4a5568 !important;
                color: #ffffff !important;
            }

        .text-muted {
            color: #a0aec0 !important;
        }

        .border {
            border-color: #2d3748 !important;
        }

        .badge.bg-info {
            background-color: #3182ce !important;
        }

        .modal-content {
            background-color: #0a1a2d !important;
            color: #e0e0e0 !important;
            border-color: #2d3748 !important;
        }

        .modal-header, .modal-footer {
            border-color: #2d3748 !important;
        }

        .navbar {
            background-color: #0a1a2d !important;
            border-color: #1a3a5f !important;
        }

        .navbar-nav .nav-link {
            color: #e0e0e0 !important;
        }

        .footer {
            background-color: #0a1a2d !important;
            color: #a0aec0 !important;
            border-color: #1a3a5f !important;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">TaskApp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <img src="~/imgs/Screenshot 2025-12-08 110046.png" width="30" height="20"/>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Task" asp-action="Index">Tasks</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - TaskApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
